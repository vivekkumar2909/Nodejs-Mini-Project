<!-- ================= EDIT MODAL START ================= -->
<div id="editModal" class="fixed inset-0 bg-black/60 hidden 
     flex items-center justify-center z-50">

    <div class="bg-zinc-900 p-6 rounded-2xl w-full max-w-md 
                border border-zinc-700 relative">

        <h2 class="text-lg font-semibold mb-4 text-yellow-400">
            ‚úè Edit Post
        </h2>

        <form id="editForm" method="POST">

            <textarea id="editContent" name="content" rows="4" class="w-full bg-zinc-800 border border-zinc-700 
                rounded-xl p-4 focus:outline-none 
                focus:ring-2 focus:ring-yellow-500 resize-none"></textarea>

            <div class="flex justify-end gap-3 mt-4">

                <button type="button" onclick="closeEditModal()" class="px-4 py-2 bg-red-500/20 text-red-400 
                    rounded-lg hover:bg-red-500/40 transition">
                    Cancel
                </button>

                <button type="submit" class="px-4 py-2 bg-yellow-500 text-black 
                    rounded-lg hover:bg-yellow-600 transition">
                    Update
                </button>

            </div>

        </form>
    </div>
</div>
<!-- ================= EDIT MODAL END ================= -->